
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    var smsler;
  
    $(function () {

        smsler =  @Html.Raw(Json.Encode(Model));
        var dataGrid = $("#smsGrid").dxDataGrid({
            dataSource: smsler,
   
            showBorders: true,
            columnAutoWidth: true,
            hoverStateEnabled: true,
            filterRow: { visible: false, applyFilter: "auto" },
            paging: { pageSize: 10 },
            showColumnLines: true,
            rowAlternationEnabled: true,
            selection: {
                mode: "single"
            },
            searchPanel: {
                width:350,
                visible: true
            },
            headerFilter: {
                visible: true
            },

            loadPanel: {
                enabled: true,

            },
       
            columns: [

                {
                    dataField: "id",
                    caption: "id",
                    visible: false,

                },
                //{
                //    dataField: "kisi_id",
                //    caption: "Kisi id",
                //    visible: false,
                //},
                {
                    dataField: "isim",
                    caption: "İsim",
                },
                {
                    dataField: "tel1",
                    caption: "Telefon",
                },
              
                {
                    dataField: "icerik",
                    caption: "Mesaj İçeriği",
                },
                {
                    dataField: "tarih",
                    caption: "Tarih",
                },
              
           
            ],

            summary: {
                totalItems: [{
                    column: "baslik",
                    summaryType: "count",

                },

                ]
            },
         

            onToolbarPreparing: function (e) {
                var toolbarItems = e.toolbarOptions.items;
                var searchPanel = $.grep(toolbarItems, function (item) {
                    return item.name === "searchPanel";
                })[0];
                searchPanel.location = "after";

                toolbarItems.push({
                    text: "Sms Listesi",
                    location: "before"
                });
           
            },


        });

    });



</script>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="demo-container">

                <div id="smsGrid">

                </div>
            </div>
        </div>
    </div>
</div>

