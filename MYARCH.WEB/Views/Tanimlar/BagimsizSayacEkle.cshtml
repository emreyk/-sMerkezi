
@{
    ViewBag.Title = "BagimsizSayacEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "SayacKaydet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using MYARCH.DTO.EEntity
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-12">
                        <div class="header-elements-inline">
                            <h5 class="card-title">Bağımsız Bölüm Sayacı Ekle </h5>
                            <div class="header-elements">
                                <div class="list-icons">
                                    <a class="list-icons-item" data-action="collapse"></a>
                                    <a class="list-icons-item" data-action="reload"></a>
                                    <a class="list-icons-item" data-action="remove"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Blok</label>
                                <div class="col-lg-10">
                                    <select data-placeholder="Seçiniz" class="form-control form-control-select2" id="blok" data-fouc>
                                        <option></option>
                                        <optgroup label="Blok adı">
                                            @foreach (EBlokDTO bloklar in ViewBag.Bloklar)
                                            {
                                                <option value="@bloklar.id">@bloklar.blok_adi</option>
                                            }

                                        </optgroup>

                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Bağımsız bölüm</label>
                                <div class="col-lg-10">
                                    <select data-placeholder="Seçiniz" class="form-control form-control-select2" id="daireNo" data-fouc>
                                        <option></option>
                                        <optgroup label="Daire no">
                                            <option></option>
                                        </optgroup>

                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Bağlı Olduğu Ana Sayaç</label>
                                <div class="col-lg-10">
                                    <select data-placeholder="Seçiniz" class="form-control form-control-select2" id="anaSayac" data-fouc>
                                        <option></option>
                                        <optgroup label="Ana sayaç seçiniz">
                                            @foreach (EAnasayacDTO anasayac in ViewBag.AnaSayaclar)
                                            {
                                                <option value="@anasayac.id">@anasayac.sayac_adi</option>
                                            }
                                        </optgroup>

                                    </select>
                                </div>
                            </div>



                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Tesisat No</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="tesisatNo">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">İlk okuma</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="ilkOkuma">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Açıklama</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="aciklama">
                                </div>
                            </div>
                            <div class="text-right">
                                <button type="button" class="btn btn-primary" onclick="BagimsizSayacKaydet()">Kaydet <i class="icon-paperplane ml-2"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




<script src="~/Scriptler/Tanimlar/BagimsizSayac.js">

    BagimsizSayacKaydet();
</script>


