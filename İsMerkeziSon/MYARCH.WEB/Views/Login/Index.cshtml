<script>
    function GirisKontrol() {
        var model = { kullanici_adi: $("#kAdi").val(), sifre: $("#sifre").val() };
        if (model.kullanici_adi != "" && model.sifre != "") {
            $.ajax({
                url: "/Login/LoginControl",
                type: "POST",
                data: model,
                success: function (response) {
                    if (response == "") {
                        Uyari("error", "Giriş başarısız");
                    }

                    else {
                        Uyari("success", "Anasayfaya yönlendiriliyorsunuz");
                        setTimeout(function () {
                            window.location.href = response;
                        }, 2000);
                    }
                }
            });
        } else {
            Uyari("error", "Lütfen kullanıcı adınızı ve şifrenizi giriniz");
            /*setTimeout(function () {
                
                window.location.href = "/Login";
            }, 2000);*/
        }
    }
</script>


